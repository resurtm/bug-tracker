{% if pages > 1 %}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="{% if page == 1 %}disabled{% endif %}">
            <a href="{{ path(route, {page: page == 1 ? 1 : page - 1}) }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        {% for index in 1..pages %}
            <li class="{{ page == index ? 'active' : '' }}">
                <a href="{{ path(route, {page: index}) }}">{{ index }}</a>
            </li>
        {% endfor %}

        <li class="{% if page == pages %}disabled{% endif %}">
            <a href="{{ path(route, {page: page == pages ? pages : page + 1}) }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>

{% endif %}
